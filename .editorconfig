# top-most EditorConfig file
root = true

[*]
# Unix-style newlines with a newline ending every file
end_of_line = lf
insert_final_newline = true
# default to 2 spaces
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# 4 space indentation for JS
[*.js]
indent_size = 4

# 4 space indentation for HTML and Mustache
[*.html]
indent_size = 4

# 4 space indentation for HTML and Mustache
[*.mustache]
indent_size = 4
